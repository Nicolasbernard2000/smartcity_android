<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_recycler_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/recycler_view_row_background"
    android:gravity="center"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/event_recycler_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        tools:text="Description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="100">

        <TextView
            android:id="@+id/event_recycler_item_date_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimary"
            tools:text="Date Hour"/>

        <TextView
            android:id="@+id/event_recycler_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimary"
            tools:text="Duration"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="right"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/event_creator_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/event_modify_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/ic_baseline_edit_24"/>

            <ImageButton
                android:id="@+id/event_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/ic_baseline_delete_24"/>


        </LinearLayout>

        <Button
            android:id="@+id/event_participation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecond"
            android:text="@string/participation"/>

    </LinearLayout>

</LinearLayout>